<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar una novedad</h4>

            <form method="post" action="/admin/novedades/modificar">
                <input type="hidden" value="{{novedad.id_nov}}" name="id_nov">

                <div class="form-group" style="margin-bottom: 20px;">
                    <input type="text" class="form-control" placeholder="Título" name="titulo"
                        value="{{novedad.titulo}}">
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <input type="date" class="form-control" placeholder="Fecha" name="fecha" value="{{novedad.fecha}}">
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <textarea class="form-control" placeholder="Subtítulo" name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <textarea class="form-control" placeholder="Cuerpo" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <textarea class="form-control" placeholder="Imagen" name="imagen">{{novedad.imagen}}</textarea>
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <textarea class="form-control" placeholder="Link" name="link">{{novedad.link}}</textarea>
                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>

            {{#if error}}
            <P>{{MESSAGE}}</P>
            {{/if}}

        </div>
    </div>
</div>