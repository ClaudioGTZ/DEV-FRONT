<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar una novedad</h4>

            <form method="post" action="/admin/novedades/modificar" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id_nov}}" name="id_nov">

                <div class="form-group" style="margin-bottom: 20px;">
                    <input type="text" class="form-control" placeholder="Título" name="titulo"
                        value="{{novedad.titulo}}">
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <input type="date" class="form-control" placeholder="Fecha" name="fecha" value="{{novedad.fecha}}">
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <textarea class="form-control" placeholder="Subtítulo"
                        name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <textarea class="form-control" placeholder="Cuerpo" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <p>
                        <label>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label><input type="checkbox" name="img_delete" id="img_delete" value="1">
                        Eliminar imagen actual</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <textarea class="form-control" placeholder="Link" name="link">{{novedad.link}}</textarea>
                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>

            {{#if error}}
            <P>{{MESSAGE}}</P>
            {{/if}}

        </div>
    </div>
</div>