<div class="container text-center my-4">
    <span>Hola {{persona}}!</span>
    <div class="mt-3 mb-4">
        <a href="/admin/login/logout" class="btn btn-danger">
            Cerrar sesión <i class="fas fa-sign-out-alt"></i>
        </a>
    </div>

    <div class="row"> <!-- Título y Botón nuevo -->
        <div class="col-7" style="margin-top: -9px;">
            <h2>Listado de Novedades</h2>
        </div>
        <div class="col-5 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i> Nuevo</a>
        </div>
    </div>

    <div class="row" style="margin-top: 50px;"> <!-- Tabla con info -->
        <div class="col">
            <table class="table">
                <thead class="table-striped">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Novedad</th>
                        <th scope="col">Fecha</th>
                        <th scope="col">Bajada</th>
                        <th scope="col" class="text-right">Desarrollo</th>
                        <th scope="col">Imagen</th>
                        <th scope="col">Link</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id_nov}}</th>
                        <td>{{titulo}}</td>
                        <td>{{fecha}}</td>
                        <td>{{subtitulo}}</td>
                        <td>{{cuerpo}}</td>
                        <td>{{{imagen}}}</td>
                        <td>{{link}}</td>
                        <td class="text-right">
                            <a href="/admin/novedades/modificar/{{id_nov}}" class="btn btn-secondary"><i
                                    class="fas fa-pencil-alt"></i></a>
                            <a href="/admin/novedades/eliminar/{{id_nov}}" class="btn btn-secondary">
                                <i class="fas fa-trash"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div> <!-- Fin Tabla con info -->
</div>