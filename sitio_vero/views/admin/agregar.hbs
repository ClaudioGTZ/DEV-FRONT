<div class="container" style="margin: 100px auto;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post">
                <div class="form-group" style="margin-bottom: 20px;">
                    <input type="text" class="form-control" placeholder="Título" name="titulo">
                </div>
                <div class="form-group" style="margin-bottom: 20px;">
                     <input type="date" class="form-control" placeholder="Fecha" name="fecha">
                </div>
                <div class="form-group" style="margin-bottom: 20px;">
                    <textarea class="form-control" placeholder="Subtítulo" name="subtitulo"></textarea>
                </div>
                <div class="form-group" style="margin-bottom: 20px;">
                    <textarea class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>
                </div>
                <div class="form-group" style="margin-bottom: 20px;">
                    <textarea class="form-control" placeholder="Imagen" name="Imagen"></textarea>
                </div>
                <div class="form-group" style="margin-bottom: 20px;">
                    <textarea class="form-control" placeholder="Link" name="Link"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>

            {{#if error}}
                <P>{{MESSAGE}}</P>
            {{/if}}
            
        </div>
    </div>
</div>